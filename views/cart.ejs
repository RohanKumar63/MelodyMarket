<%- include('./partials/header') %>

<div class="px-10 py-20 bg-gray-100 min-h-screen flex flex-wrap items-center justify-center gap-4">
    <% user.cart.forEach(function(item){ %>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 flex flex-col items-center gap-4 mb-10 bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="w-full relative">
                <div class="w-full flex justify-center items-center h-48 bg-[<%= item.bgcolor %>] relative">
                    <img class="h-32 transition-transform duration-500 hover:scale-105" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>">
                </div>
                <div class="w-full flex justify-between px-3 py-2 bg-[<%= item.panelcolor %>]">
                    <h3 class="text-md font-semibold text-gray-800"><%= item.name %></h3>
                    <div class="flex items-center gap-1">
                        <button class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-add-line shadow hover:bg-gray-200"></button>
                        <div class="px-1 py-0.5 rounded-md bg-white text-black text-sm">01</div>
                        <button class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-subtract-line shadow hover:bg-gray-200"></button>
                    </div>
                </div>
    
            </div>
            <div class="w-full px-3">
                <h3 class="text-md font-semibold text-gray-800 mb-2">Price Breakdown</h3>
                <div class="px-3">
                    <div class="flex mt-1 justify-between">
                        <h4 class="w-1/2 text-gray-700 text-sm">Total MRP</h4>
                        <h4 class="text-gray-700 text-sm"><%= item.price %></h4>
                    </div>
                    <div class="flex mt-1 justify-between">
                        <h4 class="w-1/2 text-gray-700 text-sm">Discount on MRP</h4>
                        <h4 class="text-gray-700 text-sm"><%= item.discount %></h4>
                    </div>
                    <div class="flex mt-1 justify-between">
                        <h4 class="w-1/2 text-gray-700 text-sm">Shipping Fee</h4>
                        <h4 class="text-gray-700 text-sm">FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-gray-300 mt-3"></div>
                <div class="flex mt-2 justify-between">
                    <h3 class="w-1/2 text-md font-semibold text-gray-800">Total Amount</h3>
                    <h3 class="font-semibold text-md text-green-600">₹ <%= bill %> </h3>
                </div>
            </div>
        </div>
    <% }) %>

    <div class="w-full h-[1px] bg-gray-300 mt-10"></div>
    <div class="flex mt-5 justify-between w-full max-w-md">
        <h3 class="text-xl font-semibold text-gray-800">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">₹ <%= totalBill %> </h3>
    </div>
</div>

<%- include('./partials/footer') %>
